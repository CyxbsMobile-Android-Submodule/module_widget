<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/widget_bg_title">

        <TextView
            android:id="@+id/widget_normal_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="掌上重邮"
            android:textColor="#ffffff" />


        <ImageView
            android:id="@+id/widget_normal_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/widget_normal_title"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/widget_back" />

        <ImageView
            android:id="@+id/widget_normal_front"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/widget_normal_title"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/widget_front" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_course_backgroud"
